---
import { marked } from "marked";
import Base from "@/layouts/Base.astro";

const content = await fetch(new URL("https://raw.githubusercontent.com/tnfssc/tnfssc/refs/heads/main/RESUME.md"))
  .then((r) => r.text())
  .catch((e) => {
    console.error(e);
    return "# Cannot access GitHub to fetch the latest resume\n\nOpen it directly instead [https://raw.githubusercontent.com/tnfssc/tnfssc/refs/heads/main/RESUME.md](https://raw.githubusercontent.com/tnfssc/tnfssc/refs/heads/main/RESUME.md)";
  });

const file = marked(content);
---

<Base title="sharath's resume">
  <div class="m-4 flex flex-col items-center bg-dot-black/20 dark:bg-dot-white/20">
    <article
      set:html={file.toString()}
      class:list={[
        "prose dark:prose-invert mx-auto",
        "prose-a:no-underline hover:prose-a:underline",
        "prose-img:rounded-xl prose-img:my-1",
        "prose-hr:my-2",
        "prose-pre:mt-0 prose-pre:rounded-t-none",
        "prose-code:whitespace-pre prose-code:rounded prose-code:border-[#24292e] prose-code:bg-[#24292e] prose-code:p-0.5 prose-code:text-white prose-code:before:hidden prose-code:after:hidden",
        "hide-last-empty-line-in-code-block hide-quote-marks-inside-blockquote remove-first-line-space-infront-of-code-block defaults-for-unplugin-icons",
      ]}
    />
  </div>
</Base>
