---
interface Props {
  date: Date;
  id?: string;
}

const { id, date } = Astro.props;
---

<time {id} datetime={date.toISOString()} transition:name={`${date.toISOString()}-date` + (id ?? "")}>
  {
    date.toLocaleDateString("en-us", {
      month: "short",
      day: "numeric",
      year: "numeric",
    })
  }
</time>
